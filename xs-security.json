{
  "xsappname": "maintenance-manager",
  "tenant-mode": "dedicated",
  "scopes": [
    { "name": "$XSAPPNAME.User", "description": "Acceso básico a la aplicación" },
    { "name": "$XSAPPNAME.Admin", "description": "Permisos administrativos" }
  ],
  "role-templates": [
    {
      "name": "User",
      "description": "Usuario estándar",
      "scope-references": ["$XSAPPNAME.User"]
    },
    {
      "name": "Admin",
      "description": "Administrador",
      "scope-references": ["$XSAPPNAME.User", "$XSAPPNAME.Admin"]
    }
  ]
}